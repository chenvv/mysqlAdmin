<table>    
    <tr>
        <td><b>Table Name:</b></td>
        <td> <%= select_tag "table_name" , options_for_select(@table_nms_option)  %></td>
    </tr>
    <tr>
        <td><b>Data File Name:</b></td><td><%= text_field_tag "file_name", '', {:size => 60} %></b></td>
    </tr>
</table>
